@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin-Shows</title>
    <style>
        body {
            /* background-image: url('../../images/img02.jpg');*/
            background-color: black;
            background-size: cover; /* Cover the entire background */
            background-repeat: no-repeat; /* Prevent the image from repeating */
        }

        .container {
            display: flex;
            padding-right: 70pt;
        }
    </style>
</head>
<body>
    <div style="margin:-5pt">
        <div style="padding-left:300pt;padding-right:300pt ;padding-bottom:5pt;padding-top:5pt">
            <h1 style="text-align:center;color:red">Six Eye Cinema Shows</h1>
        </div>
        <div style="padding-top:10pt;padding-bottom:50pt;padding-left:10pt">
            <div style="margin: 0 auto; color: black;font-size: 20px; padding-left: 200pt">
                <table border="1" style="border-color:red">
                    <tr bgcolor="red" style="border-spacing:20px">
                        <th style="border: 1px solid black;">Movie</th>
                        <th style="border: 1px solid black;">Screen IDs</th>
                        <th style="border: 1px solid black;">Date</th>
                        <th style="border: 1px solid black;">Time Slot</th>
                        <th style="border: 1px solid black;">Seats Booked</th>
                    </tr>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr bgcolor="black" style="border-spacing:20px">
                            <td style="color: red ;border: 1px solid red;">@row["Mid"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Screen"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Mdate"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Time_slotId"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["B_seats"]</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="container" style="color:black;padding-right:60pt;padding-top:30pt;margin:0 auto;width:80%">
                <div>
                    <h1 style="color:black;text-align:center">
                        Enter A Show
                    </h1>
                    <form action="/Home/Admin" method="post">
                        <table border="1" bgcolor="red" height="300" width="300">
                            <tr>
                                <td>Movie Id </td>
                                <td><input type="number" min ="1" name="Mid" /></td>
                            </tr>
                            <tr>
                                <td>Screen Id </td>
                                <td><input type="text" name="Screen" /></td>
                            </tr>
                            <tr>
                                <td>Date </td>
                                <td><input type="date" name="date" /></td>
                            </tr>
                            <tr>
                                <td>Time Slot id</td>
                                <td><input type="text" name="slot" /></td>
                            </tr>

                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Save Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
                <p style="color:black">

                </p>
                <div style="padding-left: 30pt">
                    <h1 style="color:black;text-align:center">
                        Edit A Show
                    </h1>
                    <form action="/Home/Admin" method="post">
                        <table border="1" bgcolor="red" height="300" width="300">
                            <tr>
                                <td>Screen Id </td>
                                <td><input type="text" name="Screen" /></td>
                            </tr>
                            <tr>
                                <td>Date </td>
                                <td><input type="date" name="date" /></td>
                            </tr>
                            <tr>
                                <td>Time Slot id</td>
                                <td><input type="text" name="slot" /></td>
                            </tr>
                            <tr>
                                <td>Set Movie Id </td>
                                <td><input type="number" min ="1" name="Mid2" /></td>
                            </tr>
                            <tr>
                                <td>Set Screen Id </td>
                                <td><input type="text" name="Screen2" /></td>
                            </tr>
                            <tr>
                                <td>Set Date </td>
                                <td><input type="date" name="date2" /></td>
                            </tr>
                            <tr>
                                <td>Set Time Slot id</td>
                                <td><input type="text" name="slot2" /></td>
                            </tr>

                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Edit Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
                <div style="padding-left: 30pt">
                    <h1 style="color:black;text-align:center">
                        Delete A Show
                    </h1>
                    <form action="/Home/Admin" method="post">
                        <table border="1" bgcolor="red" height="300" width="300">
                            <tr>
                                <td>Screen Id </td>
                                <td><input type="text" name="Screen" /></td>
                            </tr>
                            <tr>
                                <td>Date </td>
                                <td><input type="date" name="date" /></td>
                            </tr>
                            <tr>
                                <td>Time Slot id</td>
                                <td><input type="text" name="slot" /></td>
                            </tr>

                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Delete Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
            </div>
            <div style="text-align:center;color:white;font-size:30pt">
                @ViewBag.result
            </div>
        </div>
    </div>
</body>
</html>