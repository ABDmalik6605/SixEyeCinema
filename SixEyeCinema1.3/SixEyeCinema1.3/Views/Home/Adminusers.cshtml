
@{
    ViewBag.Title = "Adminusers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using System.Data;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin-Shows</title>
    <style>
        body {
            /* background-image: url('../../images/img02.jpg');*/
            background-color: black;
            background-size: cover; /* Cover the entire background */
            background-repeat: no-repeat; /* Prevent the image from repeating */
        }

        .container {
            display: flex;
            padding-right: 70pt;
        }
    </style>
</head>
<body>
    <div style="margin:-5pt">
        <div style="padding-left:330pt;padding-right:270pt ;padding-bottom:5pt;padding-top:5pt">
            <h1 style="text-align:center;color:red">Six Eye Cinema Users</h1>
        </div>
        <div style="padding-top:10pt;padding-bottom:50pt;padding-left:10pt">
            <div style="margin: 0 auto; color: black;font-size: 20px; padding-left: 240pt">
                <table border="1" style="border-color:red">
                    <tr bgcolor="red" style="border-spacing:20px">
                        <th style="border: 1px solid black;">UID</th>
                        <th style="border: 1px solid black;">Name</th>
                        <th style="border: 1px solid black;">Email</th>
                    </tr>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr bgcolor="black" style="border-spacing:20px">
                            <td style="color: red ;border: 1px solid red;">@row["uid"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Name"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Email"]</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="container" style="color:black;padding-left:250pt;padding-top:30pt;margin:0 auto;width:80%">
                <div>
                    <h1 style="color:black;text-align:center">
                        Delete A User
                    </h1>
                    <form action="/Home/Adminusers" method="post">
                        <table border="1" bgcolor="red" height="150" width="300">
                            <tr>
                                <td style="font-size:25px;font:bold">Enter UID: </td>
                                <td><input type="number" min ="1" name="UID1" /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Delete Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
            </div>
            <div style="text-align:center;color:white;font-size:30pt">
                @ViewBag.result
            </div>
        </div>
    </div>
</body>
</html>

