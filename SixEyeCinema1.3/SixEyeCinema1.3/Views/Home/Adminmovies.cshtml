
@{
    ViewBag.Title = "Adminmovies";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin-Shows</title>
    <style>
        body {
            background-color: black;
            background-size: cover; /* Cover the entire background */
            background-repeat: no-repeat; /* Prevent the image from repeating */
        }

        .container {
            display: flex;
            padding-right: 70pt;
        }
    </style>
</head>
<body>
    <div style="margin:-5pt">
        <div style="padding-left:330pt;padding-right:270pt ;padding-bottom:5pt;padding-top:5pt">
            <h1 style="text-align:center;color:red">Six Eye Cinema Movies</h1>
        </div>
        <div style="padding-top:10pt;padding-bottom:50pt;padding-left:10pt">
            <div style="margin: 0 auto; color: black;font-size: 20px; padding-left: 160pt">
                <table border="1" style="border-color:red">
                    <tr bgcolor="red" style="border-spacing:20px">
                        <th style="border: 1px solid black;">Movie ID</th>
                        <th style="border: 1px solid black;">Movie name</th>
                        <th style="border: 1px solid black;">Genre</th>
                        <th style="border: 1px solid black;">Age Rating</th>
                        <th style="border: 1px solid black;">Picture</th>
                    </tr>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr bgcolor="black" style="border-spacing:20px">
                            <td style="color: red ;border: 1px solid red;">@row["Mid"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Mname"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Genre"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["Age_limit"]</td>
                            <td style="color: red ;border: 1px solid red;">@row["picture"]</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="container" style="color:black;padding-right:60pt;padding-top:30pt;margin:0 auto;width:80%">
                <div sstyle="font-size:15px" ">
                    <h1 style="color:black;text-align:center">
                        Enter A Show
                    </h1>
                    <form action="/Home/Adminmovies" method="post">
                        <table border="1" bgcolor="red" height="300" width="300">
                            <tr>
                                <td>Movie Id </td>
                                <td><input type="number" min ="1" name="Mid" /></td>
                            </tr>
                            <tr>
                                <td>Movie name </td>
                                <td><input type="text" name="mname" /></td>
                            </tr>
                            <tr>
                                <td>Genre </td>
                                <td><input type="text" name="gen" /></td>
                            </tr>
                            <tr>
                                <td>Age rating </td>
                                <td><input type="text" name="age" /></td>
                            </tr>
                            <tr>
                                <td>Picture name</td>
                                <td><input type="text" name="pic" /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Save Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
                <p style="color:black">

                </p>
                <div style="padding-left: 30pt;font-size:15px">
                    <h1 style="color:black;text-align:center">
                        Edit A Show
                    </h1>
                    <form action="/Home/Adminmovies" method="post">
                        <table border="1" bgcolor="red" height="300" width="300">
                            <tr>
                                <td>Movie Id </td>
                                <td><input type="number" min ="1" name="Mid1" /></td>
                            </tr>
                            <tr>
                                <td>Set Movie Id </td>
                                <td><input type="number" min ="1" name="Mid" /></td>
                            </tr>
                            <tr>
                                <td>Set Movie name </td>
                                <td><input type="text" name="mname" /></td>
                            </tr>
                            <tr>
                                <td>Genre </td>
                                <td><input type="text" name="gen" /></td>
                            </tr>
                            <tr>
                                <td>Set Age rating </td>
                                <td><input type="text" name="age" /></td>
                            </tr>
                            <tr>
                                <td>Set Picture name</td>
                                <td><input type="text" name="pic" /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Edit Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
                <div style="padding-left: 30pt;font-size:15px">
                    <h1 style="color:black;text-align:center">
                        Delete A Show
                    </h1>
                    <form action="/Home/Adminmovies" method="post">
                        <table border="1" bgcolor="red" height="300" width="300">
                            <tr>
                                <td>Movie ID</td>
                                <td><input type="number" min ="1" name="Mid" /></td>
                            </tr>
                            <tr>
                                <td colspan="2" align="center"><input type="submit" value="Delete Data" /></td>
                            </tr>
                        </table>
                        @ViewBag.result
                    </form>
                </div>
            </div>
            <div style="text-align:center;color:white;font-size:30pt">
                @ViewBag.result
            </div>
        </div>
    </div>
</body>
</html>

